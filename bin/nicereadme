$rootpath = realpath(__DIR__."/../")."/";
require_once $rootpath."vendor/autoload.php";

$writer = new \cliptools\Writer();
$opts = new \cliptools\Arguments();
$app = new \nicereadme\Application();

//seteo de todos los flags de configuraci贸n
$opts->addFlag(
    array('h', 'help'),
    array(
        'description' => 'Imprime la ayuda y finaliza'
    )
);
//obligatorios
$opts->addFlag(
    array('target'),
    array(
        'description' => 'Path del archivo readme'
    )
);
$opts->addFlag(
    array('output'),
    array(
        'description' => 'Directorio de salida de la exportaci贸n'
    )
);
$opts->addFlag(
    array('template'),
    array(
        'description' => 'Template a utilizar. [basedark, baselight] (Opcional)',
        'default' => "baselight"
    )
);

//opcionales
$opts->addFlag(
    array('exportto'),
    array(
        'description' => 'Formato de exportaci贸n. [html, pdf] (Default: html)',
        'default' => "html"
    )
);





$opts->addFlag(
    array('i', 'index'),
    array(
        'description' => 'Indica si crea el indice o no. [true, false]',
        'default' => false
    )
);
$opts->addFlag(
    array('title'),
    array(
        'description' => 'Titulo del documento de exportaci贸n',
        'default' => ""
    )
);
$opts->addFlag(
    array('copyright'),
    array(
        'description' => 'Nombre de los derechos de autor',
        'default' => ""
    )
);
$opts->addFlag(
    array('forkme'),
    array(
        'description' => 'Url para descargar el proyecto.',
        'default' => ""
    )
);

$opts->proccess();

$app->setWriter($writer);
$app->setOpts($opts);
$app->run();
